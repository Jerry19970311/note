<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SignUpActivity"
        android:background="#ffffff">

    <android.support.v7.widget.Toolbar
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:background="#f8f8f8"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/signIpPage_toolBar"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <ImageButton
            android:layout_width="24dp"
            android:layout_height="24dp" app:srcCompat="@drawable/ic_arrow_back_black_24dp"
            android:id="@+id/imageButton"
            app:layout_constraintStart_toStartOf="@+id/signIpPage_toolBar" android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/signIpPage_toolBar" android:layout_marginBottom="8dp"
            app:layout_constraintTop_toTopOf="@+id/signIpPage_toolBar" android:layout_marginTop="8dp"
            android:background="#00ffffff"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/signUpPage_Title" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/signIpPage_toolBar"
            app:layout_constraintBottom_toBottomOf="@+id/signIpPage_toolBar" android:layout_marginBottom="8dp"
            android:gravity="center" android:text="注册" app:layout_constraintEnd_toEndOf="@+id/signIpPage_toolBar"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="@+id/signIpPage_toolBar"
            android:layout_marginStart="8dp" android:fontFamily="@font/ping_fang_sc_regular" android:typeface="normal"
            android:textSize="20sp" android:textColor="@color/main_color"/>
    <EditText
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/signUpPage_email"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="40dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="40dp" android:hint="用户名（密码）" android:fontFamily="@font/ping_fang_sc_regular"
            android:textSize="14sp" android:typeface="normal" android:textColor="@color/main_color"
            android:theme="@style/AppTheme" android:layout_marginTop="97dp"
            app:layout_constraintTop_toBottomOf="@+id/signIpPage_toolBar"/>
    <EditText
            android:layout_width="280dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/signUpPage_password" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/signUpPage_email" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_height="40dp" android:hint="密码"
            android:textSize="14sp" android:fontFamily="@font/ping_fang_sc_regular" android:typeface="normal"
            android:textColor="@color/main_color" android:layout_marginStart="40dp" android:layout_marginEnd="40dp"/>
    <EditText
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/signUpPage_passwordConfirm" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/signUpPage_password" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp" android:hint="确认密码" android:fontFamily="@font/ping_fang_sc_regular"
            android:typeface="normal" android:textSize="14sp" android:textColor="@color/main_color"/>
    <Button
            android:text="注册"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:id="@+id/signUpPage_sign" android:layout_marginTop="35dp"
            app:layout_constraintTop_toBottomOf="@+id/signUpPage_passwordConfirm"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="40dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="40dp"
            android:background="@drawable/button_round" android:fontFamily="@font/ping_fang_sc_regular"
            android:typeface="normal" android:textSize="16sp" android:textColor="@color/main_color"/>
</android.support.constraint.ConstraintLayout>